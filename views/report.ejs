    <div class="w3-container">
     


<div class="jumbotron">
    <h4 style="text-align: center;" ><b>Previous Reports</b></h4>
      
    <p style="text-align: center;" >Your Previous uploaded images and their reports can be found below.</p>
  </div>

        <% items.forEach(function(image) { %>

            <div class="w3-card-4" style="width:100%">
                <header class="w3-container w3-dark-grey">
                  <h5 style="text-align: center;"> Plant :<b> <%= image.plant %></b></h5>
                </header>
                <div class="w3-container">
                  <p style="float:left;font-size:medium;"><b>Disease : <%= image.disease %></b></p>
                  <p style="float: right;"><%= image.time %></p>
                  <hr>
                  <img src="data:image/<%=image.img.contentType%>;base64,
                  <%=image.img.data.toString('base64')%>" alt="Avatar" class="w3-left w3-margin-right" style="width:200px">
                  <h6 style="text-align: center;" ><b>Remedy</b></h6>
                  <p><%= image.remedy %></p>
                  <br>
                </div>
                <br>
              </div>
              <br>
 
        <% }) %>

        <button class="w3-button w3-block w3-light-grey w3-panel w3-border w3-round-xlarge" style="padding: 20px;" ><b>Load More</b></button>
  
  
    </div>
